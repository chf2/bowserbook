<div class="comment-body">
  <img src="<%= comment.escape('author_image_url') %>" 
       class="comment-img">
  <%= comment.escape('body') %>
  <% if (BowserBook.CurrentUser.id === parseInt(comment.escape('author_id'))) { %>
    <button class='close delete pull-right'>&times;</button>
  <% } %>
</div>
<div class="comment-footer">
  Written by 
  <%= comment.escape('author_name') %> 
  <%= comment.escape('created_at') %> ago.
  <hr />
</div>