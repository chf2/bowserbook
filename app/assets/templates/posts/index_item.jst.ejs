<div class="inner-post-container">
  <div class="post-header" id="post-id-<%= post.id %>">
    <img src="<%= post.escape('author_image_url') %>" class="post-header-img">
    <a href="/#/profiles/<%= post.escape('author_id') %>">
      <%= post.escape('author_name') %>
    </a> <%= post.escape('created_at') %> ago
    <div class="post-header-buttons">
      <% if (window.CURRENT_USER_ID == post.escape('author_id')) { %>
        <a class='edit post-glyph'>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
      <% } %>
      <% if (window.CURRENT_USER_ID == post.escape('author_id')) { %>
        <a class='delete post-glyph'>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </a>
      <% } %>
    </div>
    <hr />
  </div>
  <div class="post-body">
    <%= post.escape('body') %>
  </div>
</div>
<div class="comment-form-container"></div>
<div class="comment-index-container"></div>