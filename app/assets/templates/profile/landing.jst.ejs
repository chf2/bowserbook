<img class="profile-image" src="<%= user.escape('image_url') %>">
<h1 class="username-header"><%= user.escape('username') %></h1>
<% if (user.escape('is_a_friend') === 'true') { %> 
  <div class="landing-friend-status">âœ“ Friends</div>
<% } else if (user.id == window.CURRENT_USER_ID) { %>
  <div class="landing-friend-status">
    <a class="update-profile" href="/#/profiles/<%= user.id %>/edit">
      Update Info
    </a>
  </div>
<% } else if (user.escape('request_sent') === 'true') { %>
  <div class="landing-friend-status">Request Sent</div>
<% } else if (user.escape('request_received') === 'true') { %>
  <div class='landing-friend-status-respond'>  
    <button class="btn btn-success respond-friend-request">
      Respond to Friend Request
    </button>
  </div>
<% } else { %>
  <button class='btn btn-success send-friend-request'>Send Friend Request</button>
<% } %>
